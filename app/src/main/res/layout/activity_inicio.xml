<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculadora.Inicio"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/tit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etOperaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese la operaciÃ³n a calcular"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/etOperaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tit"

        android:layout_width="0dp"
        android:layout_height="600dp"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCompilar"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Calcular"
        android:textColor="@color/white"
        android:background="@color/purple_700"

        app:layout_constraintTop_toBottomOf="@+id/etOperaciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>